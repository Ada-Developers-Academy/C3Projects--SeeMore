<div class="row">
  <% if posts.nil? || posts.empty? %>
    <h2>This feed doesn't have any posts. ;_;</h2>
  <% else %>
    <% @posts.each_with_index do |post, index| %>
     <div class="feed">
      <%= image_tag post["images"]["low_resolution"]["url"], class: "left" %>
      <div class="right">
        <p>
          <% if post["caption"] %>
            <%= post["caption"]["text"] %>
          <% else %>
            No description provided.
          <% end %>
        </p>
      </div>
    </div>
  <% end %>
  <% end %>
</div>
