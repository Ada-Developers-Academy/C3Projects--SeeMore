<%= form_for provider, url: url, html: { class: "form-inline" } do |f| %>
  <%= f.label :username, "Search #{provider.to_s.titlecase} Users", class: "search-header" %><br>
  <%= f.text_field :username, :size => 50, placeholder: "Search Users", class: "form-control form-group search" %>
  <%= button_tag(type: 'submit', class: "btn btn-primary search") do %>
    <span class="glyphicon glyphicon-search"></span>
  <% end %>
<% end %>
