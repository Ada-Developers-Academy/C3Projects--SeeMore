<div class="container center">
  <%= image_tag("notso-2.png", class: "ninja")%>
  <h1 class="header">NinjaPartay</h1>
    <% if session[:user_id].nil? %>
      <h3 class="login-header">Choose Your Weapon</h3>
        <%= link_to login_path(provider: :instagram) do %>
            <span class="fa fa-instagram fa-5x col-sm-1 center ig-icon" aria-hidden="true" data-toggle="tooltip" title="instagram login"></span>
        <% end %>
        <%= link_to login_path(provider: :twitter) do %>
            <span class="fa fa-twitter fa-5x col-sm-1 center twitter-icon" aria-hidden="true" data-toggle="tooltip" title="twitter login"></span>
        <% end %>
    <% else %>
      <% if @user %>
        <h2><%= @user.username %></h2>
      <% end %>
      <div class="follow-delete-button">
      <%= link_to "Follow People", search_path, class: "btn btn-primary" %>
      <!-- Manage feed button -->
      <%= link_to "Assasinate", people_path, class: "btn btn-primary" %>
      <%= link_to "Refresh Instagram Feed", { controller: :instagram_posts, action: :create }, method: :post, class: "btn btn-primary" %>
      <%= link_to "Refresh Twitter Feed", { controller: :tweet_posts, action: :create }, method: :post, class: "btn btn-primary" %>
        <!-- Feed -->
        <div class="feed col-sm-4 center">
          <% if @all_posts %>
            <% @all_posts.each do |post| %>
              <div class="thumbnail">
                <% if post.provider == "Instagram"  %>
                  <span class="fa fa-instagram fa-1x" aria-hidden="true" data-toggle="tooltip"></span>
                <% else %>
                  <span class="fa fa-twitter fa-1x" aria-hidden="true" data-toggle="tooltip"></span>
                <% end %>
                <%= link_to image_tag(post.media_url, class: "ig_image"), post.link %>
                <div class="caption">
                  <h5>Posted by: <%= post.username %></h5>
                    <p><%= post.text %></p>
                  <em><%= post.date_time.strftime("%m/%d/%Y at %I:%M%p") %></em>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
    <% end %>
</div>
