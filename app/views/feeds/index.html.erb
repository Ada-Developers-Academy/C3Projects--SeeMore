<div class="container center">
  <h1 class="header">NinjaPartay</h1>
    <% if session[:user_id].nil? %>
      <h3 class="login-header">Choose Your Weapon</h3>
        <%= link_to login_path(provider: :instagram) do %>
            <span class="fa fa-instagram fa-5x col-sm-1 center ig-icon" aria-hidden="true" data-toggle="tooltip" title="instagram login"></span>
        <% end %>
        <%= link_to login_path(provider: :twitter) do %>
            <span class="fa fa-twitter fa-5x col-sm-1 center twitter-icon" aria-hidden="true" data-toggle="tooltip" title="twitter login"></span>
        <% end %>
    <% else %>
      <% if @user %>
          <h2><%= @user.username %></h2>
      <% end %>
      <div class="follow-delete-button">
      <%= link_to "Follow People", search_path, class: "btn btn-primary" %>
      <!-- Manage feed button -->
      <%= link_to "Assasinate", people_path, class: "btn btn-primary" %>
      <%= render partial: "instagrams/refresh_feed" %>
      <!-- Instagram Actual Feed here -->
      <div class="feed col-sm-4 center">
        <% if @all_posts %>
          <% @all_posts.each do |post| %>
            <div class="thumbnail">
              <%= link_to image_tag(post.photo, class: "ig_image"), post.link%>
              <div class="caption">
                <h5>Posted by: <%= post.username %></h5>
                  <p><%= post.text %></p>
                <em><%= post.date_time.strftime("%m/%d/%Y at %I:%M%p") %></em>
              </div>
            </div>

          <% end %>
        <% end %>
    <% end %>

</div>
