<h1>Creepah!!</h1>
<% @results.each do |user| %>
<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <p><%= link_to user.screen_name, "http://twitter.com/#{user.screen_name}" %></p>
      <p><%= image_tag(user.profile_image_url) %></p>
      <% if following(user.id)? %>
        <p>Following!</p>
      <% else %>
        <p><%= link_to "Follow", tw_follow_path(user.id), class: "btn btn-success"%></p>
        <!-- Add a link here once users and sessions are complete -->
      <% end %>
    </div>
  </div>
<% end %>
