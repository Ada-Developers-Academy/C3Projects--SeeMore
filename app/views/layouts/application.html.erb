<!DOCTYPE html>
<html>
<head>
  <title>STALK UR TEXT</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <header>
      <nav class="navbar navbar-default">
      <% if session[:stalker_id] %>
        <%= form_tag search_path, method: :post, class: "navbar-form navbar-left" do %>
          <%= text_field_tag :search_twitter, params[:search_twitter], placeholder: "Search Twitter Users" %>
          <%= submit_tag "Search", class: "btn btn-default" %>
        <% end %>

        <%= form_tag search_path, method: :post, class: "navbar-form navbar-left" do %>
          <%= text_field_tag :search_instagram, params[:search_instagram], placeholder: "Search Instagram Users" %>
          <%= submit_tag "Search", class: "btn btn-default" %>
        <% end %>

        <%= link_to "Sign Out", logout_path, method: :delete, class: "btn btn-default navbar-form navbar-right" %>
        <% end %>
      </nav>
    </header>

    <%= yield %>
  </div>
</body>
</html>
