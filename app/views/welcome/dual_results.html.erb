<h1 class="header search-header center">Search results for <%= @readable_search %>:</h1>
<% if @results.empty? || @results.empty  %>
<div class="feed">
  <%= image_tag "kittyhug.gif", class: "center thumbnail" %>
  <p>
    We're sorry, your search did not return any results. Don't worry it will all be ok.
  </p>
</div>
<% end %>
<% unless @dual_results.empty? %>
    <% @dual_results.each do |result| %>
      <div class="col-sm-4">
        <div class="search-result">
          <% if result["platform"] == "Vimeo" %>
            <h3>
              <%= link_to result["name"], vimeo_feed_path(grab_id(result)) %>
              <br>
              <% if user_already_vimeo? grab_id(result) %>
                <%= link_to "Unsubscribe", vimeo_unsubscribe_path(grab_id(result)), method: "delete", class: "btn btn-warning btn-md",
                    data: { confirm: "Are you sure you want to unsubscribe from this feed?" } %>
              <% else %>
                <%= link_to "Subscribe", vimeo_subscribe_path(grab_id(result)), method: "post", class: "btn btn-success btn-md" %>
              <% end %>
            </h3>
            <% if result["pictures"] %>
              <%= image_tag result["pictures"]["sizes"][3]["link"], class: "profile" %>
            <% else %>
              <%= image_tag "vimeo-avatar.png", class: "profile" %>
            <% end %>
          <% end %>

          <% if result["platform"] == "Instagram" %>
            <h3>
              <%= link_to result["username"], instagram_feed_path(result["id"]) %>
              <br>
              <% if user_already_instagram? result["id"] %>
                <%= link_to "Unsubscribe", instagram_unsubscribe_path(result["id"]), method: "delete", class: "btn btn-warning btn-md",
                    data: { confirm: "Are you sure you want to unsubscribe from this feed?" } %>
              <% else %>
                <%= link_to "Subscribe", instagram_subscribe_path(result["id"]), method: "post", class: "btn btn-success btn-md" %>
              <% end %>
              <% unless result["full_name"].empty? %>
                <br />
                <small><%= result["full_name"] %></small>
              <% end %>
            </h3>
            <%= image_tag result["profile_picture"], class: "profile" %>
          <% end %>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
