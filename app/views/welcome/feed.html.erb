<br>
<h2 class="text-center green"><%= current_user.name %>'s feed</h2>
<% if @posts.nil? || @posts.empty? %>
  <p>
    You haven't subscribed to any feeds yet. Find some interesting feeds to
    follow by searching Instagram or Vimeo users with the above search box!
  </p>
<% else %>
  <% @posts.each do |post| %>
    <div class="feed">
      <% if post.feed.platform == "Instagram" %>
        <%= image_tag post.content, class: "left" %>
      <% elsif post.feed.platform == "Vimeo" %>
        <div class ="center">
          <%= post.content.html_safe %>
        </div>
      <% end %>
        <h3>
          <% if post.feed.platform == "Instagram" %>
            <div class="right">
              <%= link_to post.feed.name, instagram_feed_path(post.feed.platform_feed_id) %>
            </div>
          <% elsif post.feed.platform == "Vimeo" %>
            <%= link_to post.feed.name, vimeo_feed_path(post.feed.platform_feed_id) %>
          <% end %>
        </h3>
        <% if post.feed.platform == "Instagram" %>
        <p class = "right">
          <% if post.description %>
            <%= shorten(post.description) %>
          <% else %>
            No description provided.
          <% end %>
        </p>
        <% elsif post.feed.platform == "Vimeo" %>
        <p>
          <% if post.description %>
            <%= shorten(post.description) %>
          <% else %>
            No description provided.
          <% end %>
        </p>
        <% end %>
      <div class="date">
        <%= post.date_posted %>
      </div>
    </div>
  <% end %>
<% end %>
